<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_uil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UIL" />

            <RadioButton
                android:id="@+id/rb_glide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glide" />

            <RadioButton
                android:id="@+id/rb_picasso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picasso" />


            <RadioButton
                android:id="@+id/rb_xutils3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xUtils3" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_single_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单选" />

            <RadioButton
                android:id="@+id/rb_muti_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多选" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sb_select_limit"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:max="9"
                android:progress="4"
                android:layout_weight="8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:checked="true"
                android:id="@+id/cb_show_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示相机" />

            <CheckBox
                android:id="@+id/cb_crop"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="裁剪" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_isSaveRectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="是否按矩形区域保存裁剪图片" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_crop_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="矩形"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_crop_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Width"
                android:text="280"
                android:inputType="number"
                android:minWidth="50dp"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_crop_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Height"
                android:text="280"
                android:inputType="number"
                android:minWidth="50dp"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb_crop_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="圆形"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_crop_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Radius"
                android:text="140"
                android:inputType="number"
                android:minWidth="50dp"
                android:textSize="12sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片保存宽:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_outputx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Width"
                android:text="800"
                android:inputType="number"
                android:minWidth="50dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片保存高:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/et_outputy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Height"
                android:inputType="number"
                android:text="800"
                android:minWidth="50dp"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_open_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Gallery"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/testImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="4dp"
            android:numColumns="3"
            android:verticalSpacing="4dp" />

        <Button
            android:id="@+id/btn_wxDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完全仿微信Demo" />
    </LinearLayout>
</ScrollView>